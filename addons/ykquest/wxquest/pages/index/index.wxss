/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.btnbox{
  position: fixed;
  bottom: 20rpx;
  display: flex;
  width: 100rpx;
  height: 100rpx;
  align-items: center;
  justify-content: center;
}
.add {
  width: 100rpx;
  height: 100rpx;
  background: #22dd82;
  border-radius: 50%;
  padding: 0 0;
  box-shadow: 0 0 10px rgba(16, 110, 64, .8);
  z-index: 99;
}
.add image {
  width: 100rpx;
  height: 100rpx;
}


.lists {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #f8f8f8;
}
.lists .item {
  padding: 14rpx 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 200rpx;
  position: relative;
  transition: all 0.2s;-webkit-transition: all 0.2s; 
}
.lists .item .box{
  background: #fff;
  margin: 0 20rpx;
  position: relative;
  border-radius: 8px;
  box-shadow: 0 0 8px rgba(0, 0, 0, .15);
  padding: 0 20rpx;
  z-index: 2;
}
.edit{position: absolute;top: 10px;right: 10px;width: 50rpx;height: 50rpx;}
.edit image{width: 100%;height: 100%;}
.time {
  line-height: 50rpx;
  color: #959595;
  padding: 16rpx 0;
  font-size: 28rpx;
  border-bottom: 1px solid #ededed;
 
}
.content {
  height: 118rpx;
  line-height: 118rpx;
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow:ellipsis; 
  overflow:hidden;
}
.empty{
  position: relative;
  top: 230rpx;
  text-align: center;
}
.empty image{
  width: 150rpx;
  height: 150rpx;
}
.empty .empty-text{
  color: #D1D1D1;
  line-height: 100rpx;
}
